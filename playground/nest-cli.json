{
  "language": "ts",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "entryFile": "main",
  "compilerOptions": {
    "builder": "tsc",
    "typeCheck": true,
    "deleteOutDir": true,
    "tsConfigPath": "./tsconfig.build.json",
    "assets": ["**/*"],
    "watchAssets": true
  },
  "exec": "node dist/playground/src/main"
}
