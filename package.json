{
  "name": "@usex/nest-shield",
  "version": "0.0.0",
  "description": "Enterprise-grade overload protection and traffic management for NestJS applications with distributed rate limiting, circuit breakers, and comprehensive monitoring",
  "license": "MIT",
  "url": "https://github.com/ali-master/nest-shield#readme",
  "keywords": [
    "nestjs",
    "overload-protection",
    "rate-limiting",
    "circuit-breaker",
    "load-shedding",
    "traffic-management",
    "ddos-protection",
    "api-protection",
    "distributed-systems",
    "microservices",
    "redis",
    "monitoring",
    "prometheus",
    "elasticsearch",
    "enterprise",
    "scalability",
    "performance",
    "resilience",
    "fault-tolerance",
    "anomaly-detection",
    "adaptive-throttling",
    "request-queue",
    "typescript",
    "express",
    "fastify",
    "kubernetes",
    "production-ready"
  ],
  "scripts": {
    "test": "jest",
    "build": "tsc -p tsconfig.build.json",
    "format": "prettier --write \"**/*.ts\"",
    "lint": "eslint \"src/**/*.ts\" --fix",
    "typecheck": "tsc --noEmit",
    "test:unit": "jest --config ./test/jest-unit.json",
    "prepublish:next": "npm run build",
    "publish:next": "npm publish --access public --tag next",
    "prepublish:npm": "npm run build",
    "publish:npm": "npm publish --access public",
    "prerelease": "npm run build",
    "release": "release-it",
    "prepare": "husky",
    "test:e2e": "jest --config ./test/jest-e2e.json --runInBand"
  },
  "dependencies": {
    "@nestjs/platform-express": "^11.1.2",
    "@nestjs/platform-fastify": "^11.1.2",
    "ioredis": "^5.3.2",
    "memjs": "^1.3.2",
    "node-cache": "^5.1.2",
    "opossum": "^8.1.3",
    "uuid": "^9.0.0"
  },
  "optionalDependencies": {
    "@nestjs/event-emitter": "^2.1.1",
    "@nestjs/schedule": "^4.1.2"
  },
  "devDependencies": {
    "@commitlint/cli": "19.8.1",
    "@commitlint/config-angular": "19.8.1",
    "@eslint/eslintrc": "3.3.1",
    "@eslint/js": "9.28.0",
    "@nestjs/common": "11.1.2",
    "@nestjs/core": "11.1.2",
    "@nestjs/testing": "11.1.2",
    "@types/express": "^4.17.17",
    "@types/jest": "29.5.14",
    "@types/memjs": "^1.3.3",
    "@types/node": "22.15.29",
    "@types/uuid": "^10.0.0",
    "eslint": "9.28.0",
    "eslint-config-prettier": "10.1.5",
    "eslint-plugin-prettier": "5.4.1",
    "globals": "16.2.0",
    "husky": "9.1.7",
    "jest": "29.7.0",
    "lint-staged": "16.1.0",
    "prettier": "3.5.3",
    "reflect-metadata": "0.2.2",
    "release-it": "19.0.3",
    "rxjs": "7.8.2",
    "ts-jest": "29.3.4",
    "typescript": "5.8.3",
    "typescript-eslint": "8.33.0"
  },
  "peerDependencies": {
    "@nestjs/common": "^10.0.0 || ^11.0.0",
    "@nestjs/core": "^10.0.0 || ^11.0.0",
    "reflect-metadata": "^0.1.13 || ^0.2.0",
    "rxjs": "^7.2.0"
  },
  "lint-staged": {
    "**/*.{ts,json}": []
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ali-master/nest-shield"
  },
  "changelog": {
    "labels": {
      "feature": "Features",
      "bug": "Bug fixes",
      "enhancement": "Enhancements",
      "docs": "Docs",
      "dependencies": "Dependencies",
      "type: code style": "Code style tweaks",
      "status: blocked": "Breaking changes",
      "breaking change": "Breaking changes"
    }
  }
}
