{
  "name": "@usex/nest-shield",
  "version": "0.0.0",
  "description": "Enterprise-grade overload protection and traffic management for NestJS applications with distributed rate limiting, circuit breakers, and comprehensive monitoring",
  "license": "MIT",
  "url": "https://github.com/ali-master/nest-shield#readme",
  "keywords": [
    "nestjs",
    "overload-protection",
    "rate-limiting",
    "circuit-breaker",
    "load-shedding",
    "traffic-management",
    "ddos-protection",
    "api-protection",
    "distributed-systems",
    "redis",
    "monitoring",
    "scalability",
    "performance",
    "resilience",
    "fault-tolerance",
    "anomaly-detection",
    "adaptive-throttling",
    "request-queue",
    "typescript",
    "express",
    "fastify"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "test": "jest",
    "test:unit": "jest --config ./test/jest-unit.json",
    "test:e2e": "jest --config ./test/jest-e2e.json --runInBand",
    "format": "prettier --write \"**/*.ts\"",
    "format:check": "prettier --check \"**/*.ts\"",
    "lint": "eslint \"src/**/*.ts\"",
    "lint:fix": "pnpm run lint --fix",
    "typecheck": "tsc --noEmit",
    "prepublish:next": "pnpm run build",
    "publish:next": "pnpm publish --access public --tag next",
    "prepublish:npm": "pnpm run build",
    "publish:npm": "pnpm publish --access public",
    "prerelease": "pnpm run build",
    "release": "release-it",
    "prepare": "simple-git-hooks install",
    "preinstall": "npx is-ci || npx only-allow pnpm"
  },
  "dependencies": {
    "@nestjs/platform-express": "^11.1.3",
    "@nestjs/platform-fastify": "^11.1.3",
    "ioredis": "^5.6.1",
    "memjs": "^1.3.2",
    "node-cache": "^5.1.2",
    "opossum": "^9.0.0",
    "uuid": "^11.1.0"
  },
  "optionalDependencies": {
    "@nestjs/event-emitter": "^3.0.1",
    "@nestjs/schedule": "^6.0.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "4.14.1",
    "@commitlint/cli": "19.8.1",
    "@commitlint/config-angular": "19.8.1",
    "@nestjs/common": "11.1.3",
    "@nestjs/core": "11.1.3",
    "@nestjs/testing": "11.1.3",
    "@types/express": "^5.0.3",
    "@types/jest": "29.5.14",
    "@types/memjs": "^1.3.3",
    "@types/node": "24.0.0",
    "@types/uuid": "^10.0.0",
    "eslint": "9.28.0",
    "eslint-plugin-format": "^1.0.1",
    "globals": "16.2.0",
    "jest": "30.0.0",
    "simple-git-hooks": "2.13.0",
    "lint-staged": "16.1.0",
    "prettier": "3.5.3",
    "reflect-metadata": "0.2.2",
    "release-it": "19.0.3",
    "rxjs": "7.8.2",
    "ts-jest": "29.3.4",
    "typescript": "5.8.3"
  },
  "peerDependencies": {
    "@nestjs/common": "^10.0.0 || ^11.0.0",
    "@nestjs/core": "^10.0.0 || ^11.0.0",
    "reflect-metadata": "^0.1.13 || ^0.2.0",
    "rxjs": "^7.2.0"
  },
  "lint-staged": {
    "*.{js,ts,mjs,cjs,json,.*rc}": [
      "pnpm eslint --fix"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ali-master/nest-shield"
  },
  "changelog": {
    "labels": {
      "feature": "Features",
      "bug": "Bug fixes",
      "enhancement": "Enhancements",
      "docs": "Docs",
      "dependencies": "Dependencies",
      "type: code style": "Code style tweaks",
      "status: blocked": "Breaking changes",
      "breaking change": "Breaking changes"
    }
  },
  "packageManager": "pnpm@10.12.1",
  "publishConfig": {
    "access": "public"
  }
}
